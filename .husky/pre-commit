echo "ğŸ” Running pre-commit checks..."

# Frontend checks
echo "ğŸ“± Checking Frontend..."
cd frontend

echo "ğŸ” Running TypeScript type check..."
npx tsc --noEmit --skipLibCheck

if [ $? -ne 0 ]; then
  echo "âŒ TypeScript type check failed!"
  exit 1
fi

echo "ğŸ” Running frontend linter..."
npm run lint

if [ $? -ne 0 ]; then
  echo "âŒ Frontend linting failed!"
  exit 1
fi

# Backend checks
echo "ğŸ Checking Backend..."
cd ../backend

# Check if virtual environment exists
if [ ! -d ".venv" ] && [ ! -d "venv" ]; then
  echo "âš ï¸  No Python virtual environment found for backend."
  echo "ğŸ’¡ Run './scripts/setup-backend.sh' to set up the backend environment."
  echo "ğŸ“± Frontend checks passed, proceeding with commit..."
  exit 0
fi

# Activate virtual environment
if [ -d ".venv" ]; then
  source .venv/bin/activate
elif [ -d "venv" ]; then
  source venv/bin/activate
fi

# Check if required packages are installed
if ! python -c "import black" 2>/dev/null; then
  echo "âš ï¸  Backend code quality tools not installed."
  echo "ğŸ’¡ Run 'pip install -r requirements.txt' in the backend directory."
  echo "ğŸ“± Frontend checks passed, proceeding with commit..."
  exit 0
fi

echo "ğŸ” Running Black formatter check..."
python -m black --check --diff .

if [ $? -ne 0 ]; then
  echo "âŒ Black formatting check failed!"
  echo "ğŸ’¡ Fix with: cd backend && python -m black ."
  exit 1
fi

echo "ğŸ” Running isort import check..."
python -m isort --check-only --diff .

if [ $? -ne 0 ]; then
  echo "âŒ isort check failed!"
  echo "ğŸ’¡ Fix with: cd backend && python -m isort ."
  exit 1
fi

echo "ğŸ” Running flake8 linter..."
python -m flake8 .

if [ $? -ne 0 ]; then
  echo "âŒ flake8 linting failed!"
  exit 1
fi

echo "âœ… All frontend and backend checks passed!"
