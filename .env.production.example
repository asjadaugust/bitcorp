# Database Configuration
POSTGRES_USER=bitcorp
POSTGRES_PASSWORD=CHANGE_ME_STRONG_PASSWORD_HERE
POSTGRES_DB=bitcorp_erp

# Redis Configuration
REDIS_PASSWORD=CHANGE_ME_REDIS_PASSWORD_HERE

# Backend Security
SECRET_KEY=CHANGE_ME_MINIMUM_32_CHARACTERS_SECRET_KEY_FOR_JWT
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Port Configuration (change these to available ports on your Synology)
FRONTEND_PORT=3000
BACKEND_PORT=8000
PGADMIN_PORT=5050

# API Configuration - Update with your Synology NAS IP/domain
NEXT_PUBLIC_API_URL=http://localhost:8000

# CORS Configuration - Add your domain/IP
BACKEND_CORS_ORIGINS=["http://localhost:3000","http://YOUR_SYNOLOGY_IP:3000"]

# pgAdmin (Optional)
PGADMIN_EMAIL=admin@bitcorp.local
PGADMIN_PASSWORD=CHANGE_ME_PGADMIN_PASSWORD

# Application Settings
ENVIRONMENT=production
DEBUG=false
MAX_FILE_SIZE=10485760
