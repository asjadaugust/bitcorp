# Windows Development Environment Variables
# Copy this to .env in the backend directory for Windows development

# Database Settings
DATABASE_URL=postgresql://bitcorp_user:bitcorp_password@localhost:5432/bitcorp_erp

# Redis Settings  
REDIS_URL=redis://localhost:6379/0

# Security Settings
SECRET_KEY=dev-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS Settings - Allow all for Windows development
ALLOWED_HOSTS=*
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=GET,POST,PUT,DELETE,OPTIONS,PATCH
CORS_ALLOW_HEADERS=*

# API Settings
API_V1_STR=/api/v1
PROJECT_NAME=Bitcorp ERP

# File Upload Settings
MAX_FILE_SIZE=10485760
UPLOAD_DIRECTORY=uploads

# Development Settings
DEBUG=true
